{
  "manifest_version": 3,
  "name": "Tab Dashboard",
  "version": "1.0",
  "description": "View, manage, and organize all open tabs across all windows.",
  "permissions": [
    "tabs",
    "sessions",
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_title": "Tab Dashboard Note",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Open Tab Note"
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+J"
      },
      "description": "Open Tab Dashboard"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}